{
    "manifest_version": 2,
    "name": "Vocabulary Saver",
    "version": "1.0",
    "description": "Save selected words to your vocabulary list and export them as a .txt file.",
    "permissions": ["contextMenus", "storage", "downloads"],
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    }
}
